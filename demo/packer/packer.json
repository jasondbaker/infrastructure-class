{

    "builders": [{
        "type": "amazon-ebs",
        "region": "us-east-1",
        "source_ami_filter": {
            "filters": {
              "virtualization-type": "hvm",
              "name": "*ubuntu-xenial-16.04-amd64-server-*",
              "root-device-type": "ebs"
            },
            "owners": ["099720109477"],
            "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "packer-build-node {{timestamp}}"
        }],

    "provisioners": [{
        "type": "shell",
        "inline": [
            "sleep 30",
            "sudo apt-get update -y",
            "sudo apt-get install unzip -y",
            "wget https://releases.hashicorp.com/packer/1.2.1/packer_1.2.1_linux_amd64.zip",
            "unzip packer_1.2.1_linux_amd64.zip -d packer",
            "sudo mv packer /usr/local/",
            "sudo echo \"export PATH=$PATH:/usr/local/packer\" | sudo tee -a /etc/environment > /dev/null"
        ]
    }],

    "post-processors": [
        {
          "type": "manifest",
          "output": "aws-manifest.json",
          "strip_path": true
        }
      ]
}